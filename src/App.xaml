<Application x:Class="spectrespy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:spectrespy">
    <Application.Resources>
        <!-- Dark theme for crypto fintech app -->
        <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="AccentColorBrush" Color="#6E56CF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>
        <SolidColorBrush x:Key="PositiveValueBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="NegativeValueBrush" Color="#F44336"/>
        
        <!-- Gradients for headers and highlights -->
        <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1A1A1A" Offset="0.0"/>
            <GradientStop Color="#252525" Offset="1.0"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#6E56CF" Offset="0.0"/>
            <GradientStop Color="#9F7AEA" Offset="1.0"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>