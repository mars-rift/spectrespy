<Window x:Class="spectrespy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spectrespy.Views"
        xmlns:vm="clr-namespace:spectrespy.ViewModels"
        xmlns:converters="clr-namespace:spectrespy.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="SpectreSpy"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
        
        <!-- Text Styles -->
        <Style x:Key="HeadingStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SubheadingStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        
        <Style x:Key="DataValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        
        <Style x:Key="DataLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Margin" Value="0,3,0,1"/>
        </Style>
        
        <!-- Button Style -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6E56CF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8570E3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Content -->
            <RowDefinition Height="Auto"/>  <!-- Status bar -->
        </Grid.RowDefinitions>
        
        <!-- Header with Network Info and Price -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Network Name -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding NetworkInfo.networkName}" 
                               Style="{StaticResource HeadingStyle}"/>
                    <TextBlock Text="{Binding LastUpdatedTime, StringFormat='Last Updated: {0}'}" 
                               Foreground="#AAAAAA" FontSize="12"/>
                </StackPanel>
                
                <!-- Price Display -->
                <Border Grid.Column="1" 
                        Background="#252525" 
                        CornerRadius="8" 
                        Padding="15,10" 
                        Margin="0,0,15,0"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="SPECTRE Price" 
                                   FontWeight="SemiBold" 
                                   Foreground="#AAAAAA"/>
                        <TextBlock Text="{Binding PriceInfo.price, StringFormat=${0:N8}}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#6E56CF"/>
                        <TextBlock Text="{Binding MarketCapInfo.marketcap, StringFormat=Market Cap: ${0:N0}}" 
                                   Foreground="#AAAAAA" 
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
                
                <!-- Refresh Button - Now in its own column -->
                <Button Grid.Column="2" 
                        Content="↻ Refresh" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource RefreshButtonStyle}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" Margin="15" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
            <!-- Network Statistics -->
            <Border Grid.Column="0" Grid.Row="0" 
                    Background="#252525" 
                    Margin="0,0,7.5,7.5" 
                    CornerRadius="8" 
                    Padding="12"
                    MinHeight="180">
                <StackPanel>
                    <TextBlock Text="Network Statistics" Style="{StaticResource SubheadingStyle}"/>
                    
                    <TextBlock Text="Block Count" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding NetworkInfo.blockCount}" Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="Header Count" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding NetworkInfo.headerCount}" Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="Difficulty" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding NetworkInfo.difficulty, StringFormat=N0}" Style="{StaticResource DataValueStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Health Info -->
            <Border Grid.Column="1" Grid.Row="0" 
                    Background="#252525" 
                    Margin="7.5,0,7.5,7.5" 
                    CornerRadius="8" 
                    Padding="12"
                    MinHeight="180">
                <StackPanel>
                    <TextBlock Text="Health Status" Style="{StaticResource SubheadingStyle}"/>
                    
                    <TextBlock Text="Is Synced" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding SpectredInfo.isSynced, Converter={StaticResource BoolToYesNoConverter}}" 
                               Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="Server Version" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding SpectredInfo.serverVersion}" 
                               Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="Mempool Size" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding SpectredInfo.mempoolSize}" 
                               Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="UTXO Indexed" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding SpectredInfo.isUtxoIndexed, Converter={StaticResource BoolToYesNoConverter}}" 
                               Style="{StaticResource DataValueStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Mining Information (New) -->
            <Border Grid.Column="2" Grid.Row="0" 
                    Background="#252525" 
                    Margin="7.5,0,0,7.5" 
                    CornerRadius="8" 
                    Padding="12"
                    MinHeight="180">
                <StackPanel>
                    <TextBlock Text="Mining Info" Style="{StaticResource SubheadingStyle}"/>
                    
                    <TextBlock Text="Current Hashrate" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding HashrateInfo.HashrateFormatted}" 
                               Style="{StaticResource DataValueStyle}"
                               FontWeight="Bold" 
                               Foreground="#6E56CF"/>
                    
                    <TextBlock Text="Peak Hashrate" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding MaxHashrateInfo.HashrateFormatted}" 
                               Style="{StaticResource DataValueStyle}"
                               FontWeight="Bold" 
                               Foreground="#4CAF50"/>
                    
                    <TextBlock Text="Block Reward" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding BlockRewardInfo.BlockRewardFormatted}" 
                               Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="Peak at Block" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding MaxHashrateInfo.blockheader.daaScore, StringFormat=N0}" 
                               Style="{StaticResource DataValueStyle}" 
                               FontSize="10"/>
                </StackPanel>
            </Border>
            
            <!-- Additional Data Section 1 -->
            <Border Grid.Column="0" Grid.Row="1" 
                    Background="#252525" 
                    Margin="0,7.5,7.5,0" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Blockchain Details" Style="{StaticResource SubheadingStyle}"/>
                    
                    <TextBlock Text="Virtual DAA Score" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding NetworkInfo.virtualDaaScore}" 
                               Style="{StaticResource DataValueStyle}"
                               FontWeight="Bold" 
                               Foreground="#6E56CF"/>
                    
                    <TextBlock Text="Pruning Point Hash" Style="{StaticResource DataLabelStyle}" Margin="0,10,0,2"/>
                    <TextBlock Text="{Binding NetworkInfo.pruningPointHash}" 
                               Style="{StaticResource DataValueStyle}"
                               TextWrapping="Wrap"
                               FontSize="11"/>
                    
                    <TextBlock Text="Past Median Time" Style="{StaticResource DataLabelStyle}" Margin="0,10,0,2"/>
                    <TextBlock Text="{Binding NetworkInfo.pastMedianTime}" 
                               Style="{StaticResource DataValueStyle}"
                               FontSize="12"/>
                </StackPanel>
            </Border>
            
            <!-- Additional Data Section 2 -->
            <Border Grid.Column="1" Grid.Row="1" 
                    Background="#252525" 
                    Margin="7.5,7.5,7.5,0" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Tip Hashes" Style="{StaticResource SubheadingStyle}"/>
                    <ItemsControl ItemsSource="{Binding NetworkInfo.tipHashes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Style="{StaticResource DataValueStyle}"
                                           TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Halving Information (New) -->
            <Border Grid.Column="2" Grid.Row="1" 
                    Background="#252525" 
                    Margin="7.5,7.5,0,0" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Next Halving" Style="{StaticResource SubheadingStyle}"/>
                    
                    <TextBlock Text="Time Until Halving" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding HalvingInfo.TimeUntilHalving}" 
                               Style="{StaticResource DataValueStyle}"
                               FontWeight="Bold" 
                               Foreground="#6E56CF"/>
                    
                    <TextBlock Text="Next Halving Date" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding HalvingInfo.nextHalvingDate}" 
                               Style="{StaticResource DataValueStyle}"/>
                    
                    <TextBlock Text="New Block Reward" Style="{StaticResource DataLabelStyle}"/>
                    <TextBlock Text="{Binding HalvingInfo.NextHalvingAmountFormatted}" 
                               Style="{StaticResource DataValueStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Connection Statistics (New) -->
            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                    Background="#252525" 
                    Margin="0,7.5,0,0" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Network Analytics" Style="{StaticResource SubheadingStyle}"/>
                    
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Hashrate Details" Style="{StaticResource DataLabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="Current" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding HashrateInfo.HashrateFormatted}" 
                                       Style="{StaticResource DataValueStyle}"
                                       Foreground="#6E56CF"/>
                            <TextBlock Text="Peak" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding MaxHashrateInfo.HashrateFormatted}" 
                                       Style="{StaticResource DataValueStyle}"
                                       Foreground="#4CAF50"/>
                            <TextBlock Text="Raw Current" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding HashrateInfo.hashrate, StringFormat=E6}" 
                                       Style="{StaticResource DataValueStyle}" 
                                       FontSize="10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Peak Block Details" Style="{StaticResource DataLabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="DAA Score" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding MaxHashrateInfo.blockheader.daaScore, StringFormat=N0}" 
                                       Style="{StaticResource DataValueStyle}"/>
                            <TextBlock Text="Difficulty" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding MaxHashrateInfo.blockheader.FormattedDifficulty}" 
                                       Style="{StaticResource DataValueStyle}"/>
                            <TextBlock Text="Peak Time" Style="{StaticResource DataLabelStyle}"/>
                            <TextBlock Text="{Binding MaxHashrateInfo.blockheader.FormattedTimestamp}" 
                                       Style="{StaticResource DataValueStyle}" 
                                       FontSize="10"/>
                        </StackPanel>
                        
                        <!-- Connection statistics available in status bar -->
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1A1A1A" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="#AAAAAA" 
                           VerticalAlignment="Center"/>
                
                <!-- Loading indicator -->
                <ProgressBar Grid.Column="0" 
                             Height="3" 
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Background="Transparent" 
                             Foreground="#6E56CF"
                             VerticalAlignment="Bottom"/>
                
                <!-- Connection Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="API Status: " Foreground="#AAAAAA" FontSize="12"/>
                    <TextBlock Text="{Binding SuccessfulConnections, StringFormat='✓{0}'}" Foreground="#4CAF50" FontSize="12" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding FailedConnections, StringFormat='✗{0}'}" Foreground="#F44336" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
